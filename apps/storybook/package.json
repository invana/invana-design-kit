{
  "name": "@invana/stoybook",
  "version": "0.0.0",
  "description": "Story book of all the ui components in invana design kit",
  "homepage": "https://github.com/invana/design-kit#readme",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css",
    "./tailwind.config": "./tailwind.config.js"
  },
  "files": [
    "dist",
    "tailwind.config.js"
  ],
  "keywords": [
    "design-system",
    "react",
    "tailwindcss",
    "shadcn",
    "invana/ui"
  ],
  "bugs": {
    "url": "https://github.com/invana/design-kit/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/invana/design-kit.git"
  },
  "license": "MIT",
  "author": "Ravi Raja Merugu",
  "scripts": {
    "dev": "storybook dev -p 6006",
    "build": "tsup && npm run build:css",
    "build:css": "tailwindcss --input ./src/styles/globals.css --output ./dist/styles.css --minify",
    "build-storybook": "storybook build",
    "lint": "eslint . --ext ts,tsx",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.3",
    "@radix-ui/react-slot": "^1.2.4",
    "@storybook/addon-a11y": "^10.1.10",
    "@storybook/addon-docs": "^10.1.10",
    "@storybook/addon-onboarding": "^10.1.10",
    "@storybook/addon-themes": "^10.1.10",
    "@storybook/addon-vitest": "^10.1.10",
    "@storybook/react-vite": "^10.1.10",
    "@tailwindcss/vite": "^4.1.18",
    "@types/react": "^19.2.3",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/browser-playwright": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.562.0",
    "playwright": "^1.57.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "shadcn": "^3.6.2",
    "storybook": "^10.1.10",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "tailwindcss-animate": "^1.0.7",
    "tsup": "^8.3.5",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "react-resizable-panels": "^4.0.15"
  }
}
